#include<stdio.h>
#include<string.h>
int main(int argc, char const *argv[])
{
    struct persona
    {
        int matricula;
        char nombre [20];
        char direccion [50];
        char carrera [25];
        float promedio;
    }; //alumno1= {1500, "Juan", "Quito", "Software", 9.2};
    //printf("%d %s %s %s %f", alumno1.matricula, alumno1.nombre, alumno1.direccion, alumno1.carrera, alumno1.promedio);//
    
    struct persona alumno1;

    for (int i = 0; i < 4; i++)
    {
         printf("Ingrese los datos del %d:\n", +1 );
         printf("Matricula: ");
         gets("%d", alumno1.matricula);
         printf("Nombre: ");
         gets("%s", alumno1.nombre);
         printf("Direccion: ");
         gets("%s", alumno1.direccion);
         printf("Carrera: ");
         gets("%s", alumno1.carrera);
         printf("Promedio: ");
         gets("%f", &alumno1.promedio);
         fflush(stdin);
    }
    
   

    return 0;
}
